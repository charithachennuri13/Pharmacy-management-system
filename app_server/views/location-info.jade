extends layout

block content
  .row.banner
    .col-12
      h1 Apollo Pharmacy

  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            i.fas.fa-star
            i.fas.fa-star
            i.fas.fa-star
            i.far.fa-star
            i.far.fa-star
          p D#8A-5, Venkatadri Township, Korremula Rd, Narepally, Hyderabad, Telangana 500088

          .card.card-primary
            .card-block
              h2.card-title Opening hours
              p.card-text Monday - Friday : 24 hours
              p.card-text Saturday : 8:00am - 5:00pm
              p.card-text Sunday : 9:00am - 5:00pm

          .card.card-primary
            .card-block
              h2.card-title Facilities
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Clinical Services
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Medication
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Compounding

        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Location map
              img.img-fluid.rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=51.455041,-0.9690884&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2&key=<API Key>')

    .row
      .col-12
        .card.card-primary.review-card
          .card-block
            a.btn.btn-primary.float-right(href='/location/review/new') âž¥ Add review
            h2.card-title Customer reviews
            .row.review
              .col-12.no-gutters.review-header
                span.rating
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.far.fa-star
                  i.far.fa-star
                span.review Author Simon Holmes
                small.review Timestamp 16 February 2017
              .col-12
                p What a great place.

            .row.review
              .col-12.no-gutters.review-header
                span.rating
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.far.fa-star
                  i.far.fa-star
                span.reviewAuthor Charlie Chaplin
                small.reviewTimestamp 14 February 2017
              .col-12
                p It was okay. All medicines are not available.
 
    .col-12.col-lg-3
      p.lead
        | Apollo Pharmacy is on Pharmacy Locator because it has clinical services and medications.
      p
        | If you've been and you like it - or if you don't - please leave a review to help other people just like you.